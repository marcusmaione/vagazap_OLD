<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="profile-box">

    <h5>Candidatos para <%= @job.title %>:</h5>

    <div class="degrees-box">
      <% @all_candidates.each do |candidate| %>

        <% if candidate[1] <= 0 %>
          <div class="degree-box">
            <p>Nome: <%= candidate[0].first_name %> <%= candidate[0].last_name %> </p>
            <p>ExperiÃªncia como <%= candidate[0].experiences[0].title %>: <%= candidate[0].experiences[0].level %> </p>
            <p>Diploma: <%= candidate[0].degrees[0].level %> <%= candidate[0].degrees[0].complete %> </p>
          </div>
        <% else %>
        <% end %>

      <% end %>
    </div>

    <br>
    <%= link_to "Voltar", profile_path, class: "btn btn-tertiary btn-sm" %>

  </div>
</div>

