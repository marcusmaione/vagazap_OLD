<div class="container col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="form-box">

   <h5>Incluir experiência:</h5>

   <%= simple_form_for(@experience) do |f| %>
     <%= f.input :company_name, :label => "Nome da empresa:" %>
     <%= f.input :company_sector, :label => "Setor da empresa:" %>
     <%= f.input :title, :label => "Cargo:" %>
     <%= f.input :level, collection: Experience::EXPERIENCELEVELS, :label => "Nível:" %>
     <%= f.input :sector, :label => "Setor do cargo:" %>
     <%= f.input :description, hint: "Breve descrição das atividades", :label => "Descrição:" %>
     <%= f.input :start_date, :label => "Data de início" %>
     <%= f.input :end_date, hint: "Deixe em branco se continua na empresa", :label => "Data de término" %>
      <!-- include logic if end_date blank = now or today, w/e works -->

   <div class="form-actions">
     <%= f.submit class: 'btn btn-primary', value: "Incluir" %>
   </div>
   <% end %>

   <p>Você pode incluir mais experiências depois se quiser.</p>

  </div>
</div>
