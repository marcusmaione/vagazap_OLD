<%# Apple tags %>
  <%= tag.meta(name: 'apple-mobile-web-app-status-bar-style', content: 'black') %>
  <%= tag.meta(name: 'apple-mobile-web-app-capable', content: 'yes') %>
  <%= tag.meta(name: 'apple-mobile-web-app-title', content: 'Pontful') %>
<%# Icons %>
  <%= tag.link(rel: 'manifest', href: asset_path('manifest.json')) %>
