  <%= tag.link(rel: 'apple-touch-icon', sizes: '152x152', href: asset_path('square-bridge.png')) %>
  <%= tag.link(rel: 'apple-touch-icon', sizes: '180x180', href: asset_path('square-bridge.png')) %>
  <%= tag.link(rel: 'apple-touch-icon', sizes: '192x192', href: asset_path('square-bridge.png')) %>
